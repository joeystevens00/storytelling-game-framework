html
  head
    title= 'Story game Test'
    <link rel="stylesheet" href="css/index.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="js/index.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
    script
      | var lookup = {};
      each scene in scenes.scenes
        | lookup[#{scene.scene}] = {};
        | lookup[#{scene.scene}].image = "#{scene.image}";
        | lookup[#{scene.scene}].text = "#{scene.text}";
        | lookup[#{scene.scene}].mode = "#{scene.mode}";
        - if (scene.options) {
          | lookup[#{scene.scene}].options=[];
          each option in scene.options
            | lookup[#{scene.scene}].options[#{option.id}] = {};
            | lookup[#{scene.scene}].options[#{option.id}].option = "#{option.option}";
            | lookup[#{scene.scene}].options[#{option.id}].scene = "#{option.scene}";
            | lookup[#{scene.scene}].options[#{option.id}].id = "#{option.id}";
        - }
      | var config = {};
      each key in Object.keys(scenes.config)
        - var configValue = scenes.config[key];
        | config.#{key} = "#{configValue}";


  body
    header
      h1 Story game Framework
    main
      div(id='game')
        // button(id='myBtn')
        - var currentScene = 1;
        img(src='' class='scene' id=currentScene height='800px' 'width=800px')
        div(id='myModal' class='modal')
            div(class='modal-content')
              span(class='pause') <i class="material-icons">pause</i>
              span(class='play') <i class="material-icons">play_arrow</i>
              span(class='next') <i class="material-icons">arrow_forward</i>
              p(id='msg')
              P(id="options")
